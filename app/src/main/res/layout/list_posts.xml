<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_margin="12dp"
    android:elevation="12dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="19dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/post_img_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/RoundedImageView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/post_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name Name"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/post_txt_hourlyRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="  ,0$"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/post_txt_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="20 years old"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/post_txt_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="1 Year Of Experience"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/post_txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="description..."
                    android:textSize="12dp" />
            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>